@page "/dashboard"
@attribute [Authorize]

<PageTitle>Dashboard</PageTitle>

<h1>Welcome to your Dashboard</h1>

<p>From here you can manage all your HarborFlow activities.</p>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Vessel Management</h5>
                <p class="card-text">View and manage your fleet of vessels.</p>
                <a href="/vessel-management" class="btn btn-primary">Go to Vessel Management</a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Service Requests</h5>
                <p class="card-text">Create and manage service requests for your vessels.</p>
                <a href="/service-requests" class="btn btn-primary">Go to Service Requests</a>
            </div>
        </div>
    </div>
</div>
