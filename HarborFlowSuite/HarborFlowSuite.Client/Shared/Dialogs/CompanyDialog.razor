@using System.Net.Http
@using System.Net.Http.Json
@using HarborFlowSuite.Core.Models
@using MudBlazor
@inject IHttpClientFactory ClientFactory
@inject ISnackbar Snackbar

<MudDialog Class="mud-paper">
    <DialogContent>
        <EditForm Model="@_company" OnValidSubmit="Submit">
            <DataAnnotationsValidator />
            <MudTextField Label="Name" @bind-Value="_company.Name" For="@(() => _company.Name)" Required="true" />
            <MudTextField Label="Primary Contact Email" @bind-Value="_company.PrimaryContactEmail" For="@(() => _company.PrimaryContactEmail)" Required="true" InputType="InputType.Email" />
            <MudTextField Label="Website" @bind-Value="_company.Website" For="@(() => _company.Website)" />
            <MudTextField Label="Logo URL" @bind-Value="_company.LogoUrl" For="@(() => _company.LogoUrl)" HelperText="Enter a URL for the company logo" />
            <MudTextField Label="Billing Address" @bind-Value="_company.BillingAddress" For="@(() => _company.BillingAddress)" Lines="2" />
            <MudSelect T="HarborFlowSuite.Core.Enums.SubscriptionTier" Label="Subscription Tier" @bind-Value="_company.SubscriptionTier" AnchorOrigin="Origin.BottomCenter">
                @foreach (HarborFlowSuite.Core.Enums.SubscriptionTier tier in Enum.GetValues(typeof(HarborFlowSuite.Core.Enums.SubscriptionTier)))
                {
                    <MudSelectItem Value="@tier">@tier</MudSelectItem>
                }
            </MudSelect>
        </EditForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Submit</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }

    [Parameter] public Company? Company { get; set; }

    private Company _company = new();

    protected override void OnInitialized()
    {
        if (Company != null)
        {
            _company = new Company
                {
                    Id = Company.Id,
                    Name = Company.Name,
                    LogoUrl = Company.LogoUrl,
                    Website = Company.Website,
                    PrimaryContactEmail = Company.PrimaryContactEmail,
                    BillingAddress = Company.BillingAddress,
                    SubscriptionTier = Company.SubscriptionTier,
                    Address = Company.Address
                };
        }
    }

    private async Task Submit()
    {
        if (string.IsNullOrWhiteSpace(_company.Name))
        {
            Snackbar.Add("Please fill in the company name.", Severity.Warning);
            return;
        }

        var client = ClientFactory.CreateClient("HarborFlowSuite.ServerAPI");
        try
        {
            HttpResponseMessage response;
            if (Company != null)
            {
                response = await client.PutAsJsonAsync($"api/company/{Company.Id}", _company);
            }
            else
            {
                response = await client.PostAsJsonAsync("api/company", _company);
            }

            if (response.IsSuccessStatusCode)
            {
                Snackbar.Add(Company != null ? "Company updated successfully!" : "Company added successfully!", Severity.Success);
                MudDialog.Close(DialogResult.Ok(true));
            }
            else
            {
                var errorMessage = await response.Content.ReadAsStringAsync();
                Snackbar.Add($"Error {(Company != null ? "updating" : "adding")} company: {errorMessage}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
            Snackbar.Add(ex.Message, Severity.Error);
        }
    }

    private void Cancel() => MudDialog.Cancel();
}
