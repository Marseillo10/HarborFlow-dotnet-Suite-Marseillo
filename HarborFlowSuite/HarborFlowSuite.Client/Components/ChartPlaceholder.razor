<div class="card mb-4 shadow-sm">
    <div class="card-body">
        <h5 class="card-title">@Title</h5>
        <p class="card-text text-muted">@Description</p>
        <div class="chart-placeholder" style="height: 200px; background-color: #f8f9fa; border-radius: 5px; display: flex; align-items: center; justify-content: center; color: #6c757d;">
            <i class="fas fa-chart-bar fa-3x"></i>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Title { get; set; } = "Chart Title";

    [Parameter]
    public string Description { get; set; } = "A visual representation of data.";
}
