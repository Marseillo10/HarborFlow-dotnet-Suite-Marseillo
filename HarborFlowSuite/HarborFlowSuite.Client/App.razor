@using Microsoft.AspNetCore.Components.Authorization
@using Blazored.Toast.Configuration
@using Microsoft.JSInterop
@using HarborFlowSuite.Client.Providers
@using MudBlazor

@inject IJSRuntime JSRuntime
@inject AuthenticationStateProvider AuthenticationStateProvider

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <MudContainer MaxWidth="MaxWidth.Small" Class="mt-16">
                        <MudAlert Severity="Severity.Error" Variant="Variant.Filled" Class="my-2">
                            Access Denied: You do not have permission to view this page.
                        </MudAlert>
                        <MudButton Variant="Variant.Filled" Color="Color.Primary" Link="/">Go Home</MudButton>
                    </MudContainer>
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <p role="alert">Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
    <BlazoredToasts />
</CascadingAuthenticationState>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var firebaseAuthenticationStateProvider = (FirebaseAuthenticationStateProvider)AuthenticationStateProvider;
            await JSRuntime.InvokeVoidAsync("authInterop.init", DotNetObjectReference.Create(firebaseAuthenticationStateProvider));
        }
    }
}
