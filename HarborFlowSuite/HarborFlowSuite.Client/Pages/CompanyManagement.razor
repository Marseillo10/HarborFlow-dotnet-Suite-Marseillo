@page "/company-management"
@using Microsoft.AspNetCore.Authorization
@using System.Net.Http
@using System.Net.Http.Json
@using HarborFlowSuite.Core.Models
@inject IHttpClientFactory ClientFactory
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject IToastService ToastService

@attribute [Authorize]

<PageTitle>Company Management</PageTitle>

<h1>Company Management</h1>

<p>This page displays a list of companies.</p>

<a href="/add-company" class="btn btn-primary mb-3"><span class="bi bi-plus-circle-fill" aria-hidden="true"></span> Add Company</a>

@if (companies == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var company in companies)
            {
                <tr>
                    <td>@company.Name</td>
                    <td>
                        <a href="/edit-company/@company.Id" class="btn btn-sm btn-primary"><span class="bi bi-pencil-square" aria-hidden="true"></span> Edit</a>
                        <button class="btn btn-sm btn-danger" @onclick="() => ConfirmDeleteCompany(company.Id.ToString())"><span class="bi bi-trash-fill" aria-hidden="true"></span> Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Company[]? companies;

    protected override async Task OnInitializedAsync()
    {
        await LoadCompanies();
    }

    private async Task LoadCompanies()
    {
        var client = ClientFactory.CreateClient("HarborFlowSuite.ServerAPI");
        try
        {
            companies = await client.GetFromJsonAsync<Company[]>("api/company");
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
            ToastService.ShowError(ex.Message);
        }
    }

    private async Task ConfirmDeleteCompany(string id)
    {
        bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this company?");
        if (confirmed)
        {
            await DeleteCompany(id);
        }
    }

    private async Task DeleteCompany(string id)
    {
        var client = ClientFactory.CreateClient("HarborFlowSuite.ServerAPI");
        try
        {
            var response = await client.DeleteAsync($"api/company/{id}");

            if (response.IsSuccessStatusCode)
            {
                ToastService.ShowSuccess("Company deleted successfully!");
                await LoadCompanies();
            }
            else
            {
                var errorMessage = await response.Content.ReadAsStringAsync();
                ToastService.ShowError($"Error deleting company: {errorMessage}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
            ToastService.ShowError(ex.Message);
        }
    }
}
