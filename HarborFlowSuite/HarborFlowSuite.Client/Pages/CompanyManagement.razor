@page "/company-management"
@using Microsoft.AspNetCore.Authorization
@using System.Net.Http
@using System.Net.Http.Json
@using HarborFlowSuite.Core.Models
@using HarborFlowSuite.Client.Services
@inject IHttpClientFactory ClientFactory
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject IToastService ToastService
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@inject ICompanyService CompanyService

@attribute [Authorize]

<PageTitle>Company Management</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <MudText Typo="Typo.h4">Company Management</MudText>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.AddCircle"
            OnClick="OpenAddCompanyDialog">
            Add Company
        </MudButton>
    </div>

    <MudText Typo="Typo.body1" Class="mb-4">This page displays a list of companies.</MudText>

    <MudCard Elevation="4" Class="glass-card rounded-xl animate-fade-in-up">
        <MudCardContent Class="pa-0">
            <MudTable Items="@companies" Dense="true" Hover="true" Filter="new Func<Company,bool>(FilterFunc1)"
                Loading="@(companies == null)" Class="glass-table" Elevation="0">
                <ToolBarContent>
                    <MudText Typo="Typo.h6" Class="ml-2">Companies</MudText>
                    <MudSpacer />
                    <MudTextField @bind-Value="_searchTerm" Placeholder="Search by company name..."
                        Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium"
                        Class="mt-0 mr-2"></MudTextField>
                </ToolBarContent>
                <HeaderContent>
                    <MudTh>Logo</MudTh>
                    <MudTh>Name</MudTh>
                    <MudTh>Tier</MudTh>
                    <MudTh>Website</MudTh>
                    <MudTh>Actions</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd DataLabel="Logo">
                        @if (!string.IsNullOrEmpty(context.LogoUrl))
                        {
                            <MudAvatar Image="@context.LogoUrl" Size="Size.Medium" />
                        }
                        else
                        {
                            <MudAvatar Color="Color.Primary" Size="Size.Medium">@context.Name.Substring(0, 1)</MudAvatar>
                        }
                    </MudTd>
                    <MudTd DataLabel="Name">@context.Name</MudTd>
                    <MudTd DataLabel="Tier">
                        <MudChip T="string" Color="@(context.SubscriptionTier == HarborFlowSuite.Core.Enums.SubscriptionTier.Enterprise ? Color.Secondary : Color.Default)" Size="Size.Small">
                            @context.SubscriptionTier
                        </MudChip>
                    </MudTd>
                    <MudTd DataLabel="Website">
                        @if (!string.IsNullOrEmpty(context.Website))
                        {
                            <MudLink Href="@context.Website" Target="_blank">@context.Website</MudLink>
                        }
                    </MudTd>
                    <MudTd DataLabel="Actions">
                        <div class="d-flex flex-row gap-2">
                            <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" Size="Size.Small"
                                OnClick="@(() => OpenEditCompanyDialog(context))" />
                            <MudIconButton Icon="@Icons.Material.Filled.History" Color="Color.Info" Size="Size.Small"
                                OnClick="@(() => OpenHistoryDialog(context.Id))" />
                            <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" Size="Size.Small"
                                OnClick="@(async () => await DeleteCompany(context))" />
                        </div>
                    </MudTd>
                </RowTemplate>
                <PagerContent>
                    <MudTablePager />
                </PagerContent>
            </MudTable>
        </MudCardContent>
    </MudCard>
</MudContainer>

<style>
    .glass-table {
        background-color: transparent !important;
    }
</style>

@code {
    private Company[]? companies;
    private string _searchTerm = "";

    private bool FilterFunc1(Company element) => FilterFunc(element, _searchTerm);

    private bool FilterFunc(Company element, string searchString)
    {
        if (string.IsNullOrWhiteSpace(searchString))
            return true;
        if (element.Name.Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        return false;
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadCompanies();
    }

    private async Task LoadCompanies()
    {
        try
        {
            var result = await CompanyService.GetCompanies();
            companies = result.ToArray();
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
            ToastService.ShowError(ex.Message);
        }
    }

    private async Task DeleteCompany(Company company)
    {
        var parameters = new DialogParameters
{
{ "Title", "Delete Company" },
{ "Message", $"Are you sure you want to delete company {company.Name}?" },
{ "MatchLabel", "Company Name" },
{ "MatchValue", company.Name }
};
        var options = new DialogOptions() { CloseButton = true, MaxWidth = MaxWidth.Small };

        var dialog = await DialogService.ShowAsync<HarborFlowSuite.Client.Shared.Dialogs.DeleteConfirmationDialog>("Delete Company",
        parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            try
            {
                var success = await CompanyService.DeleteCompany(company.Id);
                if (success)
                {
                    Snackbar.Add("Company deleted", Severity.Success);
                    await LoadCompanies();
                }
                else
                {
                    Snackbar.Add("Failed to delete company", Severity.Error);
                }
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Error deleting company: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task OpenAddCompanyDialog()
    {
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true };
        var dialog = await DialogService.ShowAsync<HarborFlowSuite.Client.Shared.Dialogs.CompanyDialog>("Add Company", options);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            await LoadCompanies();
        }
    }

    private async Task OpenEditCompanyDialog(Company company)
    {
        var parameters = new DialogParameters { { "Company", company } };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true };
        var dialog = await DialogService.ShowAsync<HarborFlowSuite.Client.Shared.Dialogs.CompanyDialog>("Edit Company", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            await LoadCompanies();
        }
    }

    private async Task OpenHistoryDialog(Guid companyId)
    {
        var parameters = new DialogParameters { { "CompanyId", companyId } };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true };
        await DialogService.ShowAsync<HarborFlowSuite.Client.Shared.Dialogs.CompanyHistoryDialog>("Company History", parameters, options);
    }
}
