@page "/service-request-management"
@using Microsoft.AspNetCore.Authorization
@using HarborFlowSuite.Core.Models
@using HarborFlowSuite.Client.Services
@inject IServiceRequestService ServiceRequestService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject IToastService ToastService

@attribute [Authorize]

<PageTitle>Service Request Management</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Service Request Management</h1>
    <button class="btn btn-success" @onclick='() => NavigationManager.NavigateTo("/add-service-request")'>
        <span class="bi bi-plus-circle-fill" aria-hidden="true"></span> Add Service Request
    </button>
</div>

<p>This page displays a list of service requests.</p>

<div class="mb-3">
    <input type="text" class="form-control" placeholder="Search by title..." @bind="SearchTerm" @bind:event="oninput" />
</div>

@if (_serviceRequests == null)
{
    <p><em>Loading...</em></p>
}
else if (FilteredServiceRequests.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Status</th>
                <th>Priority</th>
                <th>Requested At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in FilteredServiceRequests)
            {
                <tr>
                    <td>@request.Title</td>
                    <td>@request.Description</td>
                    <td>
                        <span class="badge @GetStatusBadgeClass(request.Status)">@request.Status</span>
                    </td>
                    <td>
                        <span class="badge @GetPriorityBadgeClass(request.Priority)">@request.Priority</span>
                    </td>
                    <td>@request.RequestedAt.ToShortDateString()</td>
                    <td>
                        <a href="/edit-service-request/@request.Id" class="btn btn-sm btn-primary"><span class="bi bi-pencil-square" aria-hidden="true"></span> Edit</a>
                        <button class="btn btn-sm btn-danger" @onclick='() => ToastService.ShowInfo("Delete functionality not implemented in mock service.")'><span class="bi bi-trash-fill" aria-hidden="true"></span> Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No service requests found matching your criteria.</p>
}

@code {
    private List<ServiceRequest>? _serviceRequests;
    private string _searchTerm = string.Empty;

    private string SearchTerm
    {
        get => _searchTerm;
        set
        {
            _searchTerm = value;
        }
    }

    private List<ServiceRequest> FilteredServiceRequests => _serviceRequests?.Where(r => r.Title.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase)).ToList() ?? new List<ServiceRequest>();

    protected override async Task OnInitializedAsync()
    {
        await LoadServiceRequests();
    }

    private async Task LoadServiceRequests()
    {
        try
        {
            _serviceRequests = await ServiceRequestService.GetServiceRequests();
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
            ToastService.ShowError(ex.Message);
        }
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning text-dark",
            "Approved" => "bg-success",
            "Rejected" => "bg-danger",
            "InProgress" => "bg-info text-dark",
            "Completed" => "bg-primary",
            "Cancelled" => "bg-secondary",
            _ => "bg-light text-dark"
        };
    }

    private string GetPriorityBadgeClass(string priority)
    {
        return priority switch
        {
            "High" => "bg-danger",
            "Medium" => "bg-warning text-dark",
            "Low" => "bg-info text-dark",
            _ => "bg-light text-dark"
        };
    }
}
