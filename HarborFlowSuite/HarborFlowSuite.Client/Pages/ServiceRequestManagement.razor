@page "/service-request-management"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using HarborFlowSuite.Core.Models
@using HarborFlowSuite.Shared.Constants
@using HarborFlowSuite.Client.Services
@inject IServiceRequestService ServiceRequestService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject IToastService ToastService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@inject IHttpClientFactory ClientFactory
@inject IServiceRequestSignalRService ServiceRequestSignalRService
@implements IAsyncDisposable

@attribute [Authorize]

<PageTitle>Service Request Management</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <MudText Typo="Typo.h4">Service Request Management</MudText>
        <MudButton Variant="Variant.Filled" Color="Color.Success" StartIcon="@Icons.Material.Filled.AddCircle"
            OnClick="OpenAddServiceRequestDialog">
            Add Service Request
        </MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Download"
            OnClick="ExportCsv" Class="ml-2">
            Export CSV
        </MudButton>
    </div>

    <MudText Typo="Typo.body1" Class="mb-4">This page displays a list of service requests.</MudText>

    <MudGrid>
        <MudItem xs="12" md="4">
            <MudCard Elevation="4" Class="glass-card rounded-xl animate-fade-in-up h-100">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">Requests</MudText>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        <MudTextField @bind-Value="_searchTerm" Placeholder="Search" Adornment="Adornment.Start"
                            AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0 mr-2"></MudTextField>
                    </CardHeaderActions>
                </MudCardHeader>
                <MudCardContent Class="pa-0" Style="height: 600px; overflow-y: auto;">
                    <MudList T="ServiceRequest" Clickable="true" @bind-SelectedValue="_selectedRequest" SelectionMode="SelectionMode.SingleSelection">
                        @foreach (var request in _serviceRequests.Where(FilterFunc1))
                        {
                            <MudListItem Value="@request" OnClick="@(() => SelectRequest(request))">
                                <div class="d-flex flex-column">
                                    <div class="d-flex justify-space-between align-center">
                                        <MudText Typo="Typo.subtitle2">@request.Title</MudText>
                                        <MudChip T="string" Color="@GetStatusColor(request.Status)" Size="Size.Small" Variant="Variant.Filled" Class="ml-2">@request.Status</MudChip>
                                    </div>
                                    <div class="d-flex justify-space-between align-center mt-1">
                                        <MudText Typo="Typo.caption">@(request.Vessel?.Name ?? "N/A")</MudText>
                                        <MudText Typo="Typo.caption">@request.RequestedAt.ToLocalTime().ToString("g")</MudText>
                                    </div>
                                </div>
                            </MudListItem>
                            <MudDivider />
                        }
                    </MudList>
                </MudCardContent>
            </MudCard>
        </MudItem>
                <MudItem xs="12" md="8">
            <ServiceRequestDetail ServiceRequest="@_selectedRequest" OnRequestProcessed="HandleRequestProcessed" />
        </MudItem>
    </MudGrid>
</MudContainer>

<style>
    .glass-table {
        background-color: transparent !important;
    }
</style>

@code {
    private List<ServiceRequest> _serviceRequests = new();
    private string _searchTerm = "";
    private bool _isPortAuthorityOfficer;
    private ServiceRequest _selectedRequest;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        _isPortAuthorityOfficer = user.IsInRole(UserRole.PortAuthority);
        
        ServiceRequestSignalRService.OnRequestUpdated += HandleRequestUpdated;
        await ServiceRequestSignalRService.StartConnection();

        await LoadServiceRequests();
    }

    private void SelectRequest(ServiceRequest request)
    {
        _selectedRequest = request;
    }

    private async Task HandleRequestProcessed()
    {
        // Get the current filtered list before reload to find index
        var previousFilteredList = _serviceRequests.Where(FilterFunc1).ToList();
        var currentIndex = previousFilteredList.FindIndex(r => r.Id == _selectedRequest?.Id);
        
        await LoadServiceRequests();
        
        // Re-calculate filtered list after reload
        var currentFilteredList = _serviceRequests.Where(FilterFunc1).ToList();
        
        if (currentFilteredList.Any())
        {
            var stillInList = currentFilteredList.Any(r => r.Id == _selectedRequest?.Id);
            
            if (stillInList)
            {
                 // If still in list, move to next
                 if (currentIndex >= 0 && currentIndex < currentFilteredList.Count - 1)
                 {
                     _selectedRequest = currentFilteredList[currentIndex + 1];
                 }
                 else
                 {
                     // Update reference to the new object
                     _selectedRequest = currentFilteredList.FirstOrDefault(r => r.Id == _selectedRequest.Id);
                 }
            }
            else
            {
                // If gone (e.g. filtered out), take the one at the same index
                if (currentIndex < currentFilteredList.Count)
                {
                    _selectedRequest = currentFilteredList[currentIndex];
                }
                else
                {
                    _selectedRequest = currentFilteredList.LastOrDefault();
                }
            }
        }
        else
        {
            _selectedRequest = null;
        }
        
        StateHasChanged();
    }

    private async void HandleRequestUpdated()
    {
        await LoadServiceRequests();
        await InvokeAsync(StateHasChanged);
    }

    public async ValueTask DisposeAsync()
    {
        ServiceRequestSignalRService.OnRequestUpdated -= HandleRequestUpdated;
        await Task.CompletedTask;
    }

    private async Task LoadServiceRequests()
    {
        // _loading = true; // Removed as per instruction
        try
        {
            _serviceRequests = await ServiceRequestService.GetServiceRequests() ?? new List<ServiceRequest>();
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
            ToastService.ShowError(ex.Message);
        }
        finally
        {
        }
    }

    private bool FilterFunc1(ServiceRequest element) => FilterFunc(element, _searchTerm);

    private bool FilterFunc(ServiceRequest element, string searchString)
    {
        if (string.IsNullOrWhiteSpace(searchString))
            return true;
        if (element.Title.Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        if (element.Description.Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        if ($"{element.Status}".Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        return false;
    }

    private async Task OpenApprovalDialog(ServiceRequest request, bool isApproving)
    {
        var parameters = new DialogParameters
{
{ "ContentText", $"Are you sure you want to {(isApproving ? "approve" : "reject")} this request?" },
{ "ButtonText", isApproving ? "Approve" : "Reject" },
{ "Color", isApproving ? Color.Success : Color.Error }
};

        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true };
        var dialog = await DialogService.ShowAsync<ApprovalDialog>("Approve/Reject Request", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            string comments = result.Data as string ?? "";
            await SubmitApproval(request, isApproving, comments);
        }
    }

    private async Task SubmitApproval(ServiceRequest request, bool isApproving, string comments)
    {
        try
        {
            if (isApproving)
            {
                await ServiceRequestService.ApproveServiceRequest(request.Id, comments);
                ToastService.ShowSuccess("Service request approved.");
            }
            else
            {
                await ServiceRequestService.RejectServiceRequest(request.Id, comments);
                ToastService.ShowSuccess("Service request rejected.");
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError(ex.Message);
        }
        finally
        {
            await LoadServiceRequests();
            StateHasChanged();
        }
    }

    private Color GetStatusColor(ServiceRequestStatus status)
    {
        return status switch
        {
            ServiceRequestStatus.Pending => Color.Warning,
            ServiceRequestStatus.Approved => Color.Success,
            ServiceRequestStatus.Rejected => Color.Error,
            ServiceRequestStatus.InProgress => Color.Info,
            ServiceRequestStatus.Completed => Color.Tertiary,
            ServiceRequestStatus.Cancelled => Color.Dark,
            _ => Color.Default
        };
    }

    private Color GetPriorityColor(int priority)
    {
        return priority switch
        {
            1 => Color.Error,
            2 => Color.Warning,
            3 => Color.Info,
            _ => Color.Default
        };
    }

    private string GetPriorityLabel(int priority)
    {
        return priority switch
        {
            1 => "High",
            2 => "Medium",
            3 => "Low",
            _ => "Unknown"
        };
    }

    private async Task DeleteServiceRequest(ServiceRequest request)
    {
        var parameters = new DialogParameters
        {
            { "Title", "Delete Service Request" },
            { "Message", $"Are you sure you want to delete service request {request.Title}?" },
            { "MatchLabel", "Request Title" },
            { "MatchValue", request.Title }
        };
        var options = new DialogOptions() { CloseButton = true, MaxWidth = MaxWidth.Small };

        var dialog = await DialogService.ShowAsync<HarborFlowSuite.Client.Shared.Dialogs.DeleteConfirmationDialog>("Delete Service Request", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            try
            {
                await ServiceRequestService.DeleteServiceRequest(request.Id);
                Snackbar.Add("Service request deleted successfully", Severity.Success);
                await LoadServiceRequests();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Error deleting service request: {ex.Message}", Severity.Error);
            }
        }
    }
    private async Task OpenAddServiceRequestDialog()
    {
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true };
        var dialog = await DialogService.ShowAsync<HarborFlowSuite.Client.Shared.Dialogs.ServiceRequestDialog>("Add Service Request", options);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            await LoadServiceRequests();
        }
    }

    private async Task OpenEditServiceRequestDialog(ServiceRequest request)
    {
        var parameters = new DialogParameters { { "ServiceRequest", request } };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true };
        var dialog = await DialogService.ShowAsync<HarborFlowSuite.Client.Shared.Dialogs.ServiceRequestDialog>("Edit Service Request", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            await LoadServiceRequests();
        }
    }

    private async Task OpenHistoryDialog(Guid requestId)
    {
        var parameters = new DialogParameters { { "ServiceRequestId", requestId } };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true };
        await DialogService.ShowAsync<HarborFlowSuite.Client.Shared.Dialogs.ServiceRequestHistoryDialog>("Request History", parameters, options);
    }

    private async Task ExportCsv()
    {
        try
        {
            var client = ClientFactory.CreateClient("HarborFlowSuite.ServerAPI");
            var response = await client.GetAsync("api/servicerequest/export");
            if (response.IsSuccessStatusCode)
            {
                var content = await response.Content.ReadAsStringAsync();
                var module = await JSRuntime.InvokeAsync<IJSObjectReference>("import", "./js/download.js");
                await module.InvokeVoidAsync("saveAsFile", "service_requests.csv", content);
            }
            else
            {
                Snackbar.Add("Failed to export CSV", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error exporting CSV: {ex.Message}", Severity.Error);
        }
    }
}
