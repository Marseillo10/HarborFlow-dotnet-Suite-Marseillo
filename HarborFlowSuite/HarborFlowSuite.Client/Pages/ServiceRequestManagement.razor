@page "/service-request-management"
@using Microsoft.AspNetCore.Authorization
@using HarborFlowSuite.Core.Models
@using HarborFlowSuite.Client.Services
@inject IServiceRequestService ServiceRequestService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject IToastService ToastService
@inject AuthenticationStateProvider AuthenticationStateProvider

@attribute [Authorize]

<PageTitle>Service Request Management</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Service Request Management</h1>
    <button class="btn btn-success" @onclick='() => NavigationManager.NavigateTo("/add-service-request")'>
        <span class="bi bi-plus-circle-fill" aria-hidden="true"></span> Add Service Request
    </button>
</div>

<p>This page displays a list of service requests.</p>

<div class="mb-3">
    <input type="text" class="form-control" placeholder="Search by title..." @bind="SearchTerm" @bind:event="oninput" />
</div>

@if (_serviceRequests == null)
{
    <p><em>Loading...</em></p>
}
else if (FilteredServiceRequests.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Status</th>
                <th>Priority</th>
                <th>Requested At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in FilteredServiceRequests)
            {
                <tr>
                    <td>@request.Title</td>
                    <td>@request.Description</td>
                    <td>
                        <span class="badge @GetStatusBadgeClass(request.Status)">@request.Status</span>
                    </td>
                    <td>
                        <span class="badge @GetPriorityBadgeClass(request.Priority)">@request.Priority</span>
                    </td>
                    <td>@request.RequestedAt.ToShortDateString()</td>
                    <td>
                        <a href="/edit-service-request/@request.Id" class="btn btn-sm btn-primary"><span class="bi bi-pencil-square" aria-hidden="true"></span> Edit</a>
                        <button class="btn btn-sm btn-danger" @onclick='() => ToastService.ShowInfo("Delete functionality not implemented in mock service.")'><span class="bi bi-trash-fill" aria-hidden="true"></span> Delete</button>
                        @if (_isPortAuthorityOfficer && request.Status == "Pending")
                        {
                            <button class="btn btn-sm btn-success" @onclick="() => OpenApprovalModal(request, true)">Approve</button>
                            <button class="btn btn-sm btn-warning" @onclick="() => OpenApprovalModal(request, false)">Reject</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No service requests found matching your criteria.</p>
}

@if (_showApprovalModal)
{
    <div class="modal fade show" style="display:block" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(_isApproving ? "Approve" : "Reject") Service Request</h5>
                    <button type="button" class="btn-close" @onclick="CloseApprovalModal"></button>
                </div>
                <div class="modal-body">
                    <p><strong>Request:</strong> @_selectedRequest.Title</p>
                    <textarea class="form-control" @bind="_approvalComments" placeholder="Enter comments..."></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseApprovalModal">Cancel</button>
                    <button type="button" class="btn @(_isApproving ? "btn-success" : "btn-danger")" @onclick="SubmitApproval">Submit</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}


@code {
    private List<ServiceRequest>? _serviceRequests;
    private string _searchTerm = string.Empty;
    private bool _isPortAuthorityOfficer;
    private bool _showApprovalModal;
    private ServiceRequest _selectedRequest;
    private bool _isApproving;
    private string _approvalComments;

    private string SearchTerm
    {
        get => _searchTerm;
        set
        {
            _searchTerm = value;
        }
    }

    private List<ServiceRequest> FilteredServiceRequests => _serviceRequests?.Where(r => r.Title.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase)).ToList() ?? new List<ServiceRequest>();

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        _isPortAuthorityOfficer = user.IsInRole("Port Authority Officer");
        await LoadServiceRequests();
    }

    private async Task LoadServiceRequests()
    {
        try
        {
            _serviceRequests = await ServiceRequestService.GetServiceRequests();
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
            ToastService.ShowError(ex.Message);
        }
    }

    private void OpenApprovalModal(ServiceRequest request, bool isApproving)
    {
        _selectedRequest = request;
        _isApproving = isApproving;
        _showApprovalModal = true;
    }

    private void CloseApprovalModal()
    {
        _showApprovalModal = false;
        _selectedRequest = null;
        _approvalComments = string.Empty;
    }

    private async Task SubmitApproval()
    {
        try
        {
            if (_isApproving)
            {
                await ServiceRequestService.ApproveServiceRequest(_selectedRequest.Id, _approvalComments);
                ToastService.ShowSuccess("Service request approved.");
            }
            else
            {
                await ServiceRequestService.RejectServiceRequest(_selectedRequest.Id, _approvalComments);
                ToastService.ShowSuccess("Service request rejected.");
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError(ex.Message);
        }
        finally
        {
            CloseApprovalModal();
            await LoadServiceRequests();
            StateHasChanged();
        }
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning text-dark",
            "Approved" => "bg-success",
            "Rejected" => "bg-danger",
            "InProgress" => "bg-info text-dark",
            "Completed" => "bg-primary",
            "Cancelled" => "bg-secondary",
            _ => "bg-light text-dark"
        };
    }

    private string GetPriorityBadgeClass(string priority)
    {
        return priority switch
        {
            "High" => "bg-danger",
            "Medium" => "bg-warning text-dark",
            "Low" => "bg-info text-dark",
            _ => "bg-light text-dark"
        };
    }
}
