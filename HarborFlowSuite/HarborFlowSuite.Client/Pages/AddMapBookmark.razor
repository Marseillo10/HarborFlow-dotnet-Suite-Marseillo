@page "/add-map-bookmark"
@using System.Net.Http
@using System.Net.Http.Json
@using HarborFlowSuite.Core.DTOs
@using Microsoft.AspNetCore.Authorization
@inject IHttpClientFactory ClientFactory
@inject NavigationManager NavigationManager
@inject IToastService ToastService

@attribute [Authorize]

<h3>Add Map Bookmark</h3>

<EditForm Model="@_createMapBookmarkDto" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <InputText id="name" class="form-control" @bind-Value="_createMapBookmarkDto.Name" />
    </div>

    <div class="mb-3">
        <label for="latitude" class="form-label">Latitude</label>
        <InputNumber id="latitude" class="form-control" @bind-Value="_createMapBookmarkDto.Latitude" />
    </div>

    <div class="mb-3">
        <label for="longitude" class="form-label">Longitude</label>
        <InputNumber id="longitude" class="form-control" @bind-Value="_createMapBookmarkDto.Longitude" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</EditForm>

@code {
    private readonly CreateMapBookmarkDto _createMapBookmarkDto = new() { Name = "" };

    private async Task HandleValidSubmit()
    {
        var client = ClientFactory.CreateClient("HarborFlowSuite.ServerAPI");
        try
        {
            var response = await client.PostAsJsonAsync("api/mapbookmark", _createMapBookmarkDto);

            if (response.IsSuccessStatusCode)
            {
                ToastService.ShowSuccess("Map bookmark added successfully!");
                NavigationManager.NavigateTo("/map-bookmark-management");
            }
            else
            {
                var errorMessage = await response.Content.ReadAsStringAsync();
                ToastService.ShowError($"Error adding map bookmark: {errorMessage}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
            ToastService.ShowError(ex.Message);
        }
    }
}
