@page "/map-bookmark-management"
@using Microsoft.AspNetCore.Authorization
@using System.Net.Http
@using System.Net.Http.Json
@using HarborFlowSuite.Core.Models
@inject IHttpClientFactory ClientFactory
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject IToastService ToastService

@attribute [Authorize]

<PageTitle>Map Bookmark Management</PageTitle>

<h1>Map Bookmark Management</h1>

<p>This page displays a list of map bookmarks.</p>

<a href="/add-map-bookmark" class="btn btn-primary mb-3"><span class="bi bi-plus-circle-fill" aria-hidden="true"></span> Add Map Bookmark</a>

@if (mapBookmarks == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bookmark in mapBookmarks)
            {
                <tr>
                    <td>@bookmark.Name</td>
                    <td>@bookmark.Latitude</td>
                    <td>@bookmark.Longitude</td>
                    <td>
                        <a href="/edit-map-bookmark/@bookmark.Id" class="btn btn-sm btn-primary"><span class="bi bi-pencil-square" aria-hidden="true"></span> Edit</a>
                        <button class="btn btn-sm btn-danger" @onclick="() => ConfirmDeleteMapBookmark(bookmark.Id.ToString())"><span class="bi bi-trash-fill" aria-hidden="true"></span> Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private MapBookmark[]? mapBookmarks;

    protected override async Task OnInitializedAsync()
    {
        await LoadMapBookmarks();
    }

    private async Task LoadMapBookmarks()
    {
        var client = ClientFactory.CreateClient("HarborFlowSuite.ServerAPI");
        try
        {
            mapBookmarks = await client.GetFromJsonAsync<MapBookmark[]>("api/mapbookmark");
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
            ToastService.ShowError(ex.Message);
        }
    }

    private async Task ConfirmDeleteMapBookmark(string id)
    {
        bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this map bookmark?");
        if (confirmed)
        {
            await DeleteMapBookmark(id);
        }
    }

    private async Task DeleteMapBookmark(string id)
    {
        var client = ClientFactory.CreateClient("HarborFlowSuite.ServerAPI");
        try
        {
            var response = await client.DeleteAsync($"api/mapbookmark/{id}");

            if (response.IsSuccessStatusCode)
            {
                ToastService.ShowSuccess("Map bookmark deleted successfully!");
                await LoadMapBookmarks();
            }
            else
            {
                var errorMessage = await response.Content.ReadAsStringAsync();
                ToastService.ShowError($"Error deleting map bookmark: {errorMessage}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
            ToastService.ShowError(ex.Message);
        }
    }
}
