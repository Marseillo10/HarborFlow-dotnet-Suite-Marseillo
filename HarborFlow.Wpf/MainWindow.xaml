<Window x:Class="HarborFlow.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HarborFlow.Wpf"
        xmlns:viewmodels="clr-namespace:HarborFlow.Wpf.ViewModels"
        xmlns:views="clr-namespace:HarborFlow.Wpf.Views"
        xmlns:converters="clr-namespace:HarborFlow.Wpf.Converters"
        mc:Ignorable="d"
        Title="HarborFlow"
        Height="720"
        Width="1280"
        Background="{DynamicResource WindowBackgroundColor}">
    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <DataTemplate DataType="{x:Type viewmodels:DashboardViewModel}">
            <views:DashboardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:MapViewModel}">
            <views:MapView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:VesselManagementViewModel}">
            <views:VesselManagementView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ServiceRequestViewModel}">
            <views:ServiceRequestView/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navigation Panel -->
        <Border Grid.Column="0" Background="{DynamicResource PrimaryBackgroundColor}" BorderBrush="{DynamicResource TextBoxBorderColor}" BorderThickness="0,0,1,0">
            <StackPanel>
                <TextBlock Text="HarborFlow" FontSize="24" FontWeight="Bold" Margin="15" HorizontalAlignment="Center"/>
                <ListBox ItemsSource="{Binding NavigationItems}"
                         SelectedItem="{Binding SelectedNavigationItem}"
                         DisplayMemberPath="DisplayName"
                         Style="{StaticResource NavListBoxStyle}"
                         ItemContainerStyle="{StaticResource NavListBoxItemStyle}">
                </ListBox>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="{DynamicResource PrimaryBackgroundColor}" BorderBrush="{DynamicResource TextBoxBorderColor}" BorderThickness="0,0,0,1">
                <Grid Margin="10">
                    <TextBlock Text="{Binding CurrentUserName, StringFormat='Welcome, {0}'}" FontSize="18" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Logout" Command="{Binding LogoutCommand}" Style="{StaticResource HyperlinkButtonStyle}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <Button x:Name="ToggleThemeButton" 
                                Click="ToggleThemeButton_Click" 
                                ToolTip="Toggle Theme"
                                Width="30" 
                                Height="30" 
                                Style="{StaticResource HyperlinkButtonStyle}">
                            <Path Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" Data="{StaticResource MoonIcon}"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content Area -->
            <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}" Margin="10">
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="ContentStates">
                        <VisualState x:Name="Normal"/>
                        <VisualState x:Name="FadedOut">
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2"/>
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="FadedIn">
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.2"/>
                            </Storyboard>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>
            </ContentControl>

            <!-- Notification Toast -->
            <Border Grid.Row="1" 
                    Background="{Binding NotificationBackground}" 
                    CornerRadius="4" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,20"
                    Padding="20,10"
                    Visibility="{Binding IsNotificationVisible, Converter={StaticResource BoolToVis}}">
                <TextBlock Text="{Binding NotificationMessage}" Foreground="White"/>
            </Border>

            <!-- Loading Indicator -->
            <Grid Grid.RowSpan="2" Background="#80000000" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}" Panel.ZIndex="1">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="100"/>
                    <TextBlock Text="Loading..." Foreground="White" Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>