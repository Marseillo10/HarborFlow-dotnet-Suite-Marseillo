<UserControl x:Class="HarborFlow.Wpf.Views.VesselManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HarborFlow.Wpf.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Vessel Management" FontSize="24" FontWeight="Bold" />
            <Button Content="Refresh" Command="{Binding RefreshVesselsCommand}" Margin="20,0,0,0" />
            <Button Content="Add New Vessel" Command="{Binding AddVesselCommand}" Margin="10,0,0,0"/>
            <Button Content="Edit Vessel" Command="{Binding EditVesselCommand}" Margin="10,0,0,0"/>
            <Button Content="Delete Vessel" Command="{Binding DeleteVesselCommand}" Margin="10,0,0,0"/>
            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Width="150" Margin="20,0,0,0" />
        </StackPanel>

        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding FilteredVessels}" 
                  SelectedItem="{Binding SelectedVessel}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="IMO" Binding="{Binding IMO}" />
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Flag State" Binding="{Binding FlagState}" />
                <DataGridTextColumn Header="Type" Binding="{Binding VesselType}" />
                <DataGridTextColumn Header="MMSI" Binding="{Binding Mmsi}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>