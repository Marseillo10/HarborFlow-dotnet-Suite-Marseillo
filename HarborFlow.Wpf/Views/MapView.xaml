<UserControl x:Class="HarborFlow.Wpf.Views.MapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HarborFlow.Wpf.Views"
             xmlns:converters="clr-namespace:HarborFlow.Wpf.Converters"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="{DynamicResource WindowBackgroundColor}">
    <UserControl.Resources>
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Filter Bar -->
        <Border Grid.Row="0" Background="{DynamicResource PrimaryBackgroundColor}" Padding="10" BorderBrush="{DynamicResource TextBoxBorderColor}" BorderThickness="0,0,0,1">
            <DockPanel>
                <TextBlock Text="Vessel Search" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" DockPanel.Dock="Left"/>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Grid>
                        <TextBox Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                        <ListBox ItemsSource="{Binding Suggestions}" Visibility="{Binding Suggestions.Count, Converter={StaticResource CountToVisibilityConverter}}" Margin="0,25,0,0">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="SelectionChanged">
                                    <i:InvokeCommandAction Command="{Binding SelectSuggestionCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ListBox}, Path=SelectedItem}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </ListBox>
                    </Grid>
                    <Button Content="Search" Command="{Binding SearchVesselsCommand}" Margin="10,0,0,0"/>
                    <TextBlock Text="Vessel Type:" Margin="20,0,0,0" VerticalAlignment="Center"/>
                    <ComboBox ItemsSource="{Binding VesselTypeFilters}" SelectedItem="{Binding SelectedVesselTypeFilter}" Width="120" Margin="5,0,0,0"/>
                    <Button Content="Toggle History" Command="{Binding ToggleHistoryCommand}" Margin="10,0,0,0"/>
                    <TextBlock Text="Map Layer:" Margin="20,0,0,0" VerticalAlignment="Center"/>
                    <ComboBox ItemsSource="{Binding MapLayers}" SelectedItem="{Binding SelectedMapLayer}" Width="120" Margin="5,0,0,0"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Search Results -->
            <Border Grid.Column="0" Background="{DynamicResource PrimaryBackgroundColor}" CornerRadius="8" Padding="10" Margin="0,0,10,0">
                <ListView ItemsSource="{Binding SearchResults}" SelectedItem="{Binding SelectedVessel, Mode=TwoWay}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="120"/>
                            <GridViewColumn Header="IMO" DisplayMemberBinding="{Binding IMO}" Width="100"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>

            <!-- Map Area -->
            <Grid Grid.Column="1">
                <!-- Map -->
                <Border CornerRadius="8" Background="Black">
                     <wv2:WebView2 x:Name="WebView"/>
                </Border>
                
                <!-- Bookmark Panel (Overlay) -->
                <Border Background="#C0FFFFFF" 
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="8" 
                        Padding="10" 
                        Margin="15"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Panel.ZIndex="1"
                        Visibility="{Binding IsBookmarkFeatureEnabled, Converter={StaticResource BoolToVis}}">
                    <StackPanel>
                        <TextBlock Text="Bookmarks" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding Bookmarks}"
                                  SelectedItem="{Binding SelectedBookmark}"
                                  DisplayMemberPath="Name"
                                  Width="220"
                                  Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="Add Current View" Command="{Binding AddBookmarkCommand}" Margin="0,0,5,0"/>
                            <Button Grid.Column="1" Content="Delete Selected" Command="{Binding DeleteBookmarkCommand}" Margin="5,0,0,0"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Vessel Details Panel (Overlay) -->
                <Border Background="#DAF0F0F0"
                        BorderBrush="#B0B0B0"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="15"
                        Margin="15"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Panel.ZIndex="1"
                        Visibility="{Binding IsVesselSelected, Converter={StaticResource BoolToVis}}"
                        MaxWidth="350">
                    <StackPanel Visibility="{Binding IsVesselSelected, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="{Binding SelectedVessel.Name, StringFormat='Vessel: {0}'}" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="IMO:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedVessel.IMO}" Margin="0,0,0,5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="MMSI:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedVessel.MMSI}" Margin="0,0,0,5"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Destination:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedVessel.Destination}" Margin="0,0,0,5"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="ETA:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedVessel.ETA, StringFormat='{}{0:g}'}" Margin="0,0,0,5"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Position:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SelectedVessel.CurrentPosition}" Margin="0,0,0,5"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Status:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding SelectedVessel.NavigationalStatus}" Margin="0,0,0,5"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>